[Unit]
Description=Wyoming Clawdbot Bridge
After=network.target

[Service]
Type=simple
User=vglafirov
WorkingDirectory=/home/vglafirov/wyoming-clawdbot
Environment="PATH=/home/vglafirov/.local/share/mise/installs/node/25.2.1/bin:/home/vglafirov/.local/share/mise/shims:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/vglafirov/wyoming-clawdbot/venv/bin/python wyoming_clawdbot.py --port 10600 --session-id voice-assistant
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
